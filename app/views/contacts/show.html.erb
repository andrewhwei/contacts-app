<h1><%= @contact.full_name %>'s contact page</h1>

<table class="table table-striped">
  <tr>
    <th>First Name</th>
    <th>Middle Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>Phone number</th>
    <th>Last updated</th>
    <th>Bio</th>
    <th>Address</th>
    <th>Coordinates</th>
    <th>Groups</th>
  </tr>
  <tr>
    <td><%= @contact.first_name %></td>
    <td><%= @contact.middle_name %></td>
    <td><%= @contact.last_name %></td>
    <td><%= @contact.email %></td>
    <% if @contact.phone_number && @contact.phone_number != "" %>
        <td><%= @contact.add_japanese_prefix %></td>
    <% else %>
        <td></td>
    <% end %>
    <td><%= @contact.friendly_updated_at %></td>
    <td><%= @contact.bio %></td>
    <td><%= @contact.address %></td>
    <% if @contact.address && @contact.address != "" %>
        <td><%= "[#{@contact.latitude}, #{@contact.longitude}]" %></td>
    <% else %>
        <td></td>
    <% end %>
    <td>
        <% @contact.groups.each do |group| %>
            <%= group.name %>
        <% end %>
    </td>
  </tr>
</table>

<div><%= link_to "Edit this contact", "/contacts/#{@contact.id}/edit" %></div>
<div><%= link_to "Delete this contact", "/contacts/#{@contact.id}", method: :delete %></div>
<div><%= link_to "Back to contact list", "/contacts" %></div>